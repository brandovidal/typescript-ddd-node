{
  "name": "architecture-hexagonal-node",
  "version": "0.0.4",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "deps": "pnpm db:stop && pnpm db:init",
    "dev": "dotenv -e .env.dev -- ts-node-dev -r tsconfig-paths/register --no-notify --respawn --transpile-only src/apps/start.ts",
    "commit-msg": "commitlint --edit \"$1\" --verbose",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "concurrently --kill-others-on-fail \"pnpm test:unit\" \"pnpm test:features\"",
    "test:unit": "dotenv -e .env.test -- vitest --project unit",
    "test:features": "dotenv -e .env.test -- vitest --project features",
    "test:ci": "dotenv -e .env.test -- vitest --project unit --project features --run",
    "test:ui": "dotenv -e .env.test -- vitest --project unit --project features --ui",
    "build": "pnpm clean:build && esbuild src/apps/start.ts --bundle --minify --platform=node --target=node20 --outfile=dist/app.js",
    "start": "dotenv -e .env -- node -r tsconfig-paths/register ./dist/app.js",
    "start:dev": "dotenv -e .env.dev -- node -r tsconfig-paths/register ./dist/app.js",
    "start:qa": "dotenv -e .env.qa -- node -r tsconfig-paths/register ./dist/app.js",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "clean:build": "rimraf dist/",
    "clean:install": "rimraf node_modules/ pnpm-lock.yaml",
    "clean": "pnpm clean:build && pnpm clean:install",
    "db:init": "docker compose up -d",
    "db:stop": "docker compose down",
    "prepare": "husky install"
  },
  "keywords": [
    "architecture hexagonal",
    "hexagonal",
    "node",
    "typescript",
    "ddd"
  ],
  "author": "Brando Vidal",
  "license": "ISC",
  "dependencies": {
    "bson": "6.2.0",
    "cors": "2.8.5",
    "dayjs": "1.11.10",
    "express": "4.18.2",
    "helmet": "7.1.0",
    "http-status": "1.7.3",
    "inversify": "6.0.2",
    "just-is-empty": "3.4.1",
    "just-snake-case": "3.2.0",
    "jwt-decode": "4.0.0",
    "jwt-encode": "1.0.1",
    "mongodb": "5.2.0",
    "morgan": "1.10.0",
    "reflect-metadata": "0.2.1",
    "tsconfig-paths": "4.2.0",
    "typeorm": "0.3.17",
    "uuid": "9.0.1",
    "uuid-validate": "0.0.3",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.2",
    "@faker-js/faker": "8.3.1",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.11",
    "@types/jwt-encode": "1.0.3",
    "@types/morgan": "1.9.9",
    "@types/node": "20.10.6",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.7",
    "@types/uuid-validate": "0.0.3",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@vitest/ui": "1.1.2",
    "concurrently": "8.2.2",
    "dotenv-cli": "7.3.0",
    "env-var": "7.4.1",
    "esbuild": "0.19.11",
    "eslint": "8.56.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "^8.0.0",
    "rimraf": "5.0.5",
    "standard-version": "9.5.0",
    "supertest": "6.3.3",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.1.2"
  }
}
